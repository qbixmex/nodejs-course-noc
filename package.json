{
  "name": "05-noc",
  "version": "4.7.0",
  "description": "A node js app monitor for the NOC",
  "main": "app.js",
  "scripts": {
    "dev": "tsnd --respawn --inspect --clear -- src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js",
    "docker:test": "docker compose -f docker-compose.test.yaml --env-file .env.test up -d",
    "test": "npm run docker:test && NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm run docker:test && NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "npm run docker:test && NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "Daniel Gonzalez",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "mongoose": "^8.0.4",
    "nodemailer": "^6.9.8",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "20.10.7",
    "@types/nodemailer": "^6.4.14",
    "@types/yargs": "17.0.32",
    "jest": "^29.7.0",
    "prisma": "^5.8.1",
    "rimraf": "5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3"
  }
}
