{
  "name": "05-noc",
  "version": "1.10.0",
  "description": "A node js app monitor for the NOC",
  "main": "index.js",
  "scripts": {
    "dev": "tsnd --respawn --inspect -- src/index.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "Daniel Gonzalez",
  "license": "UNLICENSED",
  "dependencies": {
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.11",
    "@types/node": "20.10.7",
    "@types/yargs": "17.0.32",
    "jest": "29.7.0",
    "rimraf": "5.0.5",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3"
  }
}
